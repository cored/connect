<tr>
  <td>
    <%= fields.label(
      :namely_field_name,
      t(
        "integration_fields.#{field_mapping.integration_key}",
        default: field_mapping.integration_field_name.titleize
      )
    ) %>
  </td>
  <td>
    <% if namely_fields.is_disable_field?(field_mapping.namely_field_name) %>
      <%= fields.input(
        :namely_field_name,
        collection: namely_fields,
        disabled: namely_fields.disable_namely_fields,
        label: false
      ) %>
  <% else %>
      <%= fields.input(
        :namely_field_name,
        collection: namely_fields,
        label: false
      ) %>
  <% end %>
  </td>
</tr>
