<%= render "subheader" %>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% if @jobvite_connection.connected? %>
        <td>
          <%= fa_icon "minus-check", class: "connected", text: "Jobvite" %>
          <strong><%= @jobvite_connection.api_key %></strong>
        </td>
        <% if @jobvite_connection.missing_namely_field? %>
          <td>
            <%= t(".missing_namely_field", name: @jobvite_connection.required_namely_field) %>
          </td>
        <% end %>
        <td>
          <%= button_to t("dashboards.show.import_now"), jobvite_imports_path, class: 'button' %>
        </td>
        <td>
          <%= button_to t("dashboards.show.disconnect"), jobvite_connection_path, method: :delete, class: 'button button-orange' %>
        </td>
      <% else %>
        <td>
          <%= fa_icon "minus-circle", class: "disconnected", text: "Jobvite" %>
        </td>
        <td></td>
        <td></td>
        <td>
          <a href="<%= url_for(edit_jobvite_connection_path) %>" class="button">
            <%= fa_icon "plug", text: t("dashboards.show.connect") %>
          </a>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
