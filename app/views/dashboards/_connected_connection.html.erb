<h3>
  <%= fa_icon(
    "check-circle",
    class: "connected",
    text: connection.readable_name
  ) %>
</h3>

<p>
  <%= t("#{connection.namespace}_connections.description.connected_html") %>
</p>

<% if connection.missing_namely_field? %>
  <%= t(
    "dashboards.show.missing_namely_field",
    name: connection.required_namely_field
  ) %>
<% end %>

<% if connection.found_namely_field? %>
  <%= render(
    "#{connection.namespace}_connections/connected",
    connection: connection
  ) %>
<% end %>

<%= render "disconnect_button", integration_id: connection.namespace %>
